<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <link rel="stylesheet" href="../css/navbar-1.css">
   <link rel="stylesheet" href="../css/home.css">
   <title>Home</title>
</head>

<body>
   <%- include('./partials/navbar-1') %>

   <div class="container">
      <% if(articles.length > 0) { %>
      <div class="tags">
         <ul>
            <li><a href="/article/tag/html">HTML</a></li>
            <li><a href="/article/tag/css">CSS</a></li>
            <li><a href="/article/tag/nodejs">Node.js</a></li>
            <li><a href="/article/tag/reactjs">React.js</a></li>
            <li><a href="/article/tag/mongodb">MongoDB</a></li>
            <li><a href="/article/tag/markdown">Markdown</a></li>
            <li><a href="/article/tag/javascript">Javascrip</a></li>
            <li><a href="/article/tag/expressjs">Express.js</a></li>
         </ul>
      </div>

      <div class="articles">
         <% articles.forEach((article) => { %>
         <div class="article">
            <a href="/article/detail/<%= article.slug %>" class="title"><%= article.title %></a>
            <p class="published"><%= formatDate(article.createdAt) %></p>
            <% article.tags.forEach((tag) => { %>
            <div class="tag"><%= tag %></div>
            <% }) %>
            <hr>
         </div>
         <% }) %>
      </div>

      <% } else { %>
      <h1 class="no-article">Article doesn't exists right now ðŸ˜…</h1>
      <% } %>

      <script>
         document.querySelectorAll('.alert span')
            .forEach(el => {
               el.addEventListener('click', () => {
                  el.parentElement.remove();
               });
            });
      </script>
   </div>
</body>

</html>