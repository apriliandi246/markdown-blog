<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <link rel="stylesheet" href="../../css/navbar.css">
   <link rel="stylesheet" href="../../css/home.css">
   <title><%= tag %></title>
</head>

<body>
   <%- include('../partials/navbar-1') %>

   <div class="container">
      <% if(articles.length > 0) { %>
      <div class="tags">
         <ul>
            <li><a href="/article/tag/javascript">Javascrip</a></li>
            <li><a href="/article/tag/nodejs">NodeJs</a></li>
            <li><a href="/article/tag/expressjs">ExpressJs</a></li>
            <li><a href="/article/tag/reactjs">ReactJs</a></li>
            <li><a href="/article/tag/mongodb">MongoDB</a></li>
         </ul>
      </div>

      <div class="articles">
         <% articles.forEach((article) => { %>
         <div class="article">
            <a href="/article/detail/<%= article.slug %>" class="title"><%= article.title %></a>
            <p class="published"><%= formatDate(article.createdAt) %></p>
            <% article.tags.forEach((tag) => { %>
            <div class="tag"><%= tag %></div>
            <% }) %>
            <hr>
         </div>
         <% }) %>
      </div>

      <% } else { %>
      <h1 class="no-article">Article with tag "<%= tag %>" doesn't exist right now ðŸ˜…</h1>
      <% } %>
   </div>
</body>

</html>