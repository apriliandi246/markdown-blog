<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <link rel="stylesheet" href="../../css/navbar-1.css">
   <link rel="stylesheet" href="../../css/home.css">
   <script defer src="../../js/collapse.js"></script>
   <title><%= tag %></title>
</head>

<body>
   <%- include('../partials/navbar-1') %>

   <div class="container">
      <% if(articles.length > 0) { %>
      <%- include('../partials/tags') %>

      <div class="articles">
         <% articles.forEach((article) => { %>
         <div class="article">
            <a href="/<%= article.slug %>" class="article__title"><%= article.title %></a>
            <p class="article__published"><%= formatDate(article.createdAt) %></p>
            <div class="article__tag"><%= article.tag %></div>
            <hr class="article__line">
         </div>
         <% }) %>
      </div>

      <% } else { %>
      <div class="tag-not-found">
         <h1 class="no-article">Article with tag "<%= tag %>" doesn't exist right now ðŸ˜…</h1>
         <a href="/" class="home-btn">Home</a>
      </div>
      <% } %>
   </div>
</body>

</html>