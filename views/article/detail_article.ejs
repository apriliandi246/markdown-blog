<!DOCTYPE html>
<html lang="en">

<head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.18.1/styles/atom-one-dark.min.css">
      <title><%= article.title %></title>
</head>

<body>
      <!-- navbar -->
      <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm p-1 mb-3 rounded fixed-top">
            <div class="container">
                  <a class="logo navbar-brand" href="/">
                        <img src="/img/meme.png" class="d-inline-block align-top rounded" alt="logo">
                  </a>
                  <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ml-auto">
                              <li class="nav-item mt-2">
                                    <div class="dropdown">
                                          <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button"
                                                id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true"
                                                aria-expanded="false">Menu
                                          </button>
                                          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                                <a class="dropdown-item text-monospace"
                                                      href="/article/edit/<%= article.id %>">Edit</a>
                                                <div class="dropdown-divider"></div>
                                                <button type="button" class="dropdown-item text-monospace"
                                                      data-toggle="modal" data-target="#exampleModal">
                                                      Delete
                                                </button>
                                          </div>
                                    </div>
                              </li>
                        </ul>
                  </div>
            </div>
      </nav>


      <!-- article body -->
      <div class="container">
            <div class="row justify-content-center mb-5 space-top">
                  <div class="col-10">
                        <h1 class="artilce-title"><%= article.title %></h1>

                        <h6 class="article-date text-muted text-monospace mt-3"><%= formatDate(article.createdAt); %>
                        </h6>

                        <% article.tags.forEach(tag => { %>
                        <div class="badge badge-primary mb-4 text-monospace">
                              <%= tag %>
                        </div>
                        <% }); %>

                        <div id="markdown-blog">
                              <%- article.sanitizedHtml %>
                        </div>
                  </div>
            </div>
      </div>


      <!-- Modal for delete article -->
      <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                  <div class="modal-content">
                        <div class="modal-body text-monospace">
                              Are you sure you want to delete this article ?
                        </div>
                        <div class="modal-footer">
                              <button type="button" class="btn btn-secondary text-monospace mr-3"
                                    data-dismiss="modal">No</button>
                              <form action="/article/delete/<%= article.id %>?_method=DELETE" method="POST"
                                    class="d-inline">
                                    <button type="submit" class="btn btn-danger text-monospace">Yes</button>
                              </form>
                        </div>
                  </div>
            </div>
      </div>

      <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.18.1/highlight.min.js"></script>
      <script src="/js/script.js"></script>
</body>

</html>